<div class="container text-center">
  <img src="/assets/img/hamburger-icon.png" class="img-burger" width="200" height="200"/>
  <hr>
  <h2>Sign Up and Join the Yummmmmm Club!!!</h2>
  <div class="row">
    <div class="col-md-12">
      <form class="create-update-form form-inline" action="/users/create" method="POST">
        <div class="form-group">
          <label for="un">Username:</label>
          <input type="text" class="form-control" id="un" name="username">
        </div>

        <div class="form-group">
          <label for="em">Email:</label>
          <input type="text" class="form-control" id="em" name="email">
        </div>

        <div class="form-group">
          <label for="pass">Password:</label>
          <input type="password" class="form-control" id="pass" name="password">
        </div>

        <button type="submit" class="btn btn-default">Sign Up!</button>
      </form>
    </div>
  </div>
</div>
